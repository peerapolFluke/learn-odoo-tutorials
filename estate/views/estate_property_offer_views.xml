<odoo>
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button icon="fa-check" type="object" name="action_accept_offer"/>
                <button icon="fa-times" type="object" name="action_refuse_offer"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view" model="ir.actions.act_window">
        <field name="name">Offer Lists</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>